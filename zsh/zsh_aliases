# native commands
alias c="clear"
alias l="ls -laF"
alias ll="ls -laF"
alias lh="ls -lahF"
alias nproc="sysctl -n hw.logicalcpu"

# cargo run
alias cr="cargo run"
# git aliases
alias gl="git l"
alias gd="git d"
alias gsd="git sd"
# helix
alias h="hx"
# trash
alias t="trash"
# vim
alias v="vim"
# just
alias j="just"
# zed
alias z="zed"
# ripgrep for rust files
alias rgs="rg -F --type rust"
# ripgrep for go files
alias rgg="rg --type go"
# use the large-v2 model for whisper.cpp
alias whisper-cli="whisper-cli -m ~/git/whisper.cpp/models/ggml-large-v2.bin"

# use `~/.bitcoin` as the datadir for `bitcoind`, `bitcoin-cli` and `bitcoin-qt`
alias bitcoind="/opt/homebrew/bin/bitcoind -datadir=$HOME/.bitcoin"
alias bitcoin-cli="/opt/homebrew/bin/bitcoin-cli -datadir=$HOME/.bitcoin"
alias bitcoin-qt="/opt/homebrew/bin/bitcoin-qt -datadir=$HOME/.bitcoin"

# use `~/.utreexod` as the datadir for `utreexod` and `utreexoctl`
alias utreexod="utreexod --datadir=$HOME/.utreexod"
alias utreexoctl="utreexoctl --datadir=$HOME/.utreexod"

# mkdir and cd to directory in one go
mkcd() {
    if [[ -z "$1" ]]; then
        echo "Usage: mkcd <directory>"
        return 1
    fi
    mkdir -p "$1" && cd "$1"
}
